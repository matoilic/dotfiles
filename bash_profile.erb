[[ -s "<%= ENV['HOME'] %>/.rvm/scripts/rvm" ]] && source "<%= ENV['HOME'] %>/.rvm/scripts/rvm"

function append_to_path {
  echo $PATH | grep -q -s $1
  if [ $? -eq 1 ] ; then
      PATH=$PATH:$1
      export PATH
  fi
}

function prepend_to_path {
  echo $PATH | grep -q -s $1
  if [ $? -eq 1 ] ; then
      PATH=$PATH:$1
      export PATH
  fi
}

prepend_to_path /usr/local/bin
prepend_to_path /usr/local/sbin
prepend_to_path /usr/local/pear/bin
prepend_to_path /usr/local/share/npm/bin
prepend_to_path ~/.bin

export GNUTERM=x11
export CLICOLOR=1
export ARCHFLAGS="-arch x86_64"
export EDITOR=mate
export NODE_PATH=$NODE_PATH:/usr/local/lib/node_modules

alias ll='ls -l'

# List all files colorized in long format, including dot files
alias la='ls -Gla'

# List only directories
alias lsd='ls -l | grep "^d"'

# File size
alias fs="stat -f \"%z bytes\""

#directory size
alias ds='du -h -d 0'

#navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ~='cd ~'

#apps
alias g='git'
alias m='mate'
alias v='vim'
alias r='rails'

# Show ~/Library folder
alias showlib="chflags nohidden ~/Library"

# Show/hide hidden files in Finder
alias showhidden="defaults write com.apple.Finder AppleShowAllFiles -bool true && killall Finder"
alias hidehidden="defaults write com.apple.Finder AppleShowAllFiles -bool false && killall Finder"

# Hide/show all desktop icons (useful when presenting)
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"

# simulate smal bandwith
alias limitbw="sudo ipfw pipe 1 config bw 10kbit/s plr 0.5 delay 1000ms && sudo ipfw add pipe 1 dst-port http"
alias resetbw="sudo ipfw flush"

#generate random string
alias rand="openssl rand -base64"