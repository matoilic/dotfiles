#!/bin/bash

case $1 in
    'start')
        sudo launchctl start com.mysql.mysqld
        sudo launchctl start uk.org.thekelleys.dnsmasq
        sudo apachectl start
        ;;
    'stop')
        sudo launchctl stop com.mysql.mysqld
        sudo launchctl stop uk.org.thekelleys.dnsmasq
        sudo apachectl stop
        ;;
    'ra')
        sudo apachectl restart
        ;;
    'ev')
        mate /etc/apache2/extra/httpd-vhosts.conf
        ;;
    *)
        echo "usaage: dev start|stop|ra|ev"
        ;;
esac